<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F6F9">

    <!-- NUEVO: Toolbar con botón de regreso -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:title="Gestión de Ruta"
        app:titleTextColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- BLOQUE 1: INFO -->
            <TextView
                android:id="@+id/tvDetalleRutaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Origen - Destino"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDetallePasajeros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasajeros: 0"
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_marginBottom="24dp"/>

            <!-- BLOQUE 2: ESTADO DEL VIAJE -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control de Viaje"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnIniciarViaje"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Iniciar Viaje (En Ruta)"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnFinalizarViaje"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Finalizar Viaje"
                        android:backgroundTint="#F44336"
                        android:enabled="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- BLOQUE 3: REPORTES -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incidencias"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reporta cualquier eventualidad ocurrida durante el trayecto."
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnCrearReporte"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Crear Reporte"
                        android:backgroundTint="#FF9800"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>