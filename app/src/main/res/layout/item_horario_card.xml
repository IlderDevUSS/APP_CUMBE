<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@color/fondo_pantalla"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Hora Grande -->
        <TextView
            android:id="@+id/tvHoraSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="08:30 PM"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/Textos_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="S/ 45.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Textos_destacado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Info Bus -->
        <TextView
            android:id="@+id/tvClaseBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bus Cama (2 Pisos)"
            android:textSize="14sp"
            android:textColor="@color/Textos_normal_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHoraSalida"/>

        <!-- Placa (Detalle sutil) -->
        <TextView
            android:id="@+id/tvPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placa: ABC-123"
            android:textSize="12sp"
            android:textColor="@color/gris2"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tvClaseBus"
            app:layout_constraintBaseline_toBaselineOf="@id/tvClaseBus"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvClaseBus"/>

        <!-- Footer: Asientos disponibles -->
        <TextView
            android:id="@+id/tvAsientosLibres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="15 asientos disponibles"
            android:textColor="@color/color_finalizado"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/gris1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>