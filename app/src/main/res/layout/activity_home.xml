<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F6F9">

        <!-- 1. HEADER (Sin cambios) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_principal_cumbe"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">
            <!-- ... (Tu header con el nombre de usuario y menú) ... -->
            <ImageView
                android:id="@+id/ivProfileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />
            <LinearLayout
                android:id="@+id/llWelcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivProfileIcon"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola de nuevo,"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.8"/>
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Andrea Martínez"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white"
                android:contentDescription="Menú"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 2. CONTENIDO PRINCIPAL -->
        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/headerHome">

            <TextView
                android:id="@+id/tvNextTripTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu Próximo Viaje"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Tarjeta Naranja (Próximo Viaje) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNextTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="15dp">
                <!-- ... (El contenido de tu tarjeta naranja va aquí dentro) ... -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_next_trip"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <!-- ... (ConstraintLayout, includes de filas, etc.) ... -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:id="@+id/tvTripOrigin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Chiclayo"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <ImageView
                                android:layout_width="18sp"
                                android:layout_height="18sp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/white"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:id="@+id/tvTripDestination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Jaén"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_directions_bus"
                            app:tint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#40FFFFFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <include layout="@layout/item_trip_info_row"
                        android:id="@+id/rowFecha" />
                    <include layout="@layout/item_trip_info_row"
                        android:id="@+id/rowHora" />
                    <include layout="@layout/item_trip_info_row"
                        android:id="@+id/rowPasajeros" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toca para ver todos tus tickets y Códigos QR."
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:gravity="end"
                        android:layout_marginTop="15dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--
              CAMBIO:
              Reemplazamos el TextView por esta CardView gris.
            -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNoNextTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/color_gris_tarjeta"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin tickets comprados."
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:padding="32dp"
                    android:textColor="@color/black"
                    android:alpha="0.6"/>

            </com.google.android.material.card.MaterialCardView>

            <!--
              CAMBIO:
              Reemplazamos GridLayout por LinearLayouts anidados.
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- Fila 1 de tarjetas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--
                      Usamos 'layout_weight=1' en los <include>
                      para que se dividan el espacio 50/50.
                    -->
                    <include layout="@layout/item_nav_card" android:id="@+id/cardComprarPasaje"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <include layout="@layout/item_nav_card" android:id="@+id/cardSeguimiento"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <!-- Fila 2 de tarjetas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/item_nav_card" android:id="@+id/cardMisTickets"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <include layout="@layout/item_nav_card" android:id="@+id/cardServicios"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 3. FOOTER (Sin cambios) -->
        <View
            android:id="@+id/footerView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color_principal_cumbe"
            app:layout_constraintTop_toBottomOf="@id/mainContent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>