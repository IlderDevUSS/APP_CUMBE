<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F6F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerHome"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:background="#F4F6F9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWelcomeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_principal_cumbe"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    tools:text="Hola, Ilder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="¿Con ganas de viajar hoy?"
                    android:textColor="#644136"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:rotation="180"
                android:src="@drawable/ic_arrow_back"
                app:tint="#644136" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDriverMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:paddingHorizontal="20dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvModeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Cliente"
                android:textColor="#644136"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchDriverMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@color/white"
                app:trackTint="@color/color_principal_cumbe"/>
        </LinearLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpPromos"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>


        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvNextTripTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu Próximo Viaje"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDriverRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="15dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFF3E0"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUTA ASIGNADA ACTUAL"
                        android:textColor="#E65100"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvDriverOrigin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Origen"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/black"
                            android:layout_marginHorizontal="10dp"/>

                        <TextView
                            android:id="@+id/tvDriverDest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destino"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDriverStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ESTADO: PROGRAMADO"
                        android:background="@drawable/bg_white_pill"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:textColor="#644136"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toca para gestionar viaje y reportes"
                        android:gravity="end"
                        android:textSize="12sp"
                        android:layout_marginTop="15dp"
                        android:textStyle="italic"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNextTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_next_trip"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:id="@+id/tvTripOrigin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="[Origen]"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <ImageView
                                android:layout_width="18sp"
                                android:layout_height="18sp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/white"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:id="@+id/tvTripDestination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="[Destino]"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_local_activity"
                            app:tint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#40FFFFFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <include layout="@layout/item_trip_info_row" android:id="@+id/rowFecha" />
                    <include layout="@layout/item_trip_info_row" android:id="@+id/rowHora" />
                    <include layout="@layout/item_trip_info_row" android:id="@+id/rowPasajeros" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toca para ver todos tus tickets"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:gravity="end"
                        android:layout_marginTop="15dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNoNextTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="15dp"
                android:visibility="gone"
                tools:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="220dp"
                    android:background="@drawable/bg_gradient_no_next_trip"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:id="@+id/tvNoTripOrigin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no_pending_tickets_title"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_local_activity"
                            app:tint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#40FFFFFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_pending_tickets_message"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:layout_marginTop="15dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvfraseEslogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mas opciones"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <include layout="@layout/item_nav_card" android:id="@+id/cardComprarPasaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <include layout="@layout/item_nav_card" android:id="@+id/cardSeguimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/footerTopBorder"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_principal_cumbe"/>

        <View
            android:id="@+id/footerView"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="@drawable/bus_3"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>