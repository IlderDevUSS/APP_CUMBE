<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_pantalla"
    tools:context=".ServiciosActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/fondo_pantalla"
        app:elevation="0dp">

        <TextView
            android:id="@+id/tvTitleServicios"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="Nuestros Servicios"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/Textos_normal_tercero"
            android:textAlignment="center"
            android:padding="24dp"
            android:background="@color/fondo_pantalla"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Imagen o Banner de la Empresa -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bus_1" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Servicios -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Que ofrecemos?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Textos_destacado"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fondo_destacados"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_directions_bus"
                            app:tint="@color/color_iconos"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transporte"
                            android:textStyle="bold"
                            android:textColor="@color/Textos_normal_second"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conectamos destinos con la seguridad y puntualidad que mereces. Ofrecemos una experiencia de viaje cómoda y confiable en nuestras rutas principales. Planifica tu viaje con anticipación a través de nuestra plataforma y disfruta de un servicio de transporte de primera clase."
                        android:textColor="@color/Textos_normal"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/fondo_destacados"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/package_variant_closed"
                            app:tint="@color/color_iconos"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Envío de encomiendas"
                            android:textStyle="bold"
                            android:textColor="@color/Textos_normal_second"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tus envíos, en las mejores manos. Garantizamos el traslado seguro de tus encomiendas con un monitoreo constante desde la recepción hasta la entrega final. Confía en nuestra logística eficiente para que tus paquetes lleguen a tiempo y en perfectas condiciones."
                        android:textColor="@color/Textos_normal"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Misión y Visión -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre Nosotros"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Textos_destacado"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fondo_destacados"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/color_iconos"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Misión"
                            android:textStyle="bold"
                            android:textColor="@color/Textos_normal_second"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brindar un servicio de transporte interprovincial seguro, puntual y de calidad, conectando a las familias peruanas."
                        android:textColor="@color/Textos_normal"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/fondo_destacados"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_track_changes"
                            app:tint="@color/color_iconos"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visión"
                            android:textStyle="bold"
                            android:textColor="@color/Textos_normal_second"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ser la empresa líder en transporte terrestre en el norte del país, reconocida por nuestra innovación y compromiso con el cliente."
                        android:textColor="@color/Textos_normal"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nuestras Sucursales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestras Sucursales"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Textos_destacado"
                android:layout_marginBottom="16dp"/>

            <!-- Tarjeta Sucursal 1 -->
            <include layout="@layout/item_sucursal_card"
                android:id="@+id/sucursalCajamarca"/>

            <!-- Tarjeta Sucursal 2 -->
            <include layout="@layout/item_sucursal_card"
                android:id="@+id/sucursalChiclayo"/>

            <!-- Tarjeta Sucursal 3 -->
            <include layout="@layout/item_sucursal_card"
                android:id="@+id/sucursalJaen"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>