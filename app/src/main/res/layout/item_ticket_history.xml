<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardTicketItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabecera Colorida -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Textos_destacado"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Lima - Trujillo"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="25 Nov 2023"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRuta"/>

            <TextView
                android:id="@+id/tvAsiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Asiento 24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Detalles Cuerpo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/fondo_pantalla"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="08:30 PM"
                        android:textColor="@color/Textos_normal"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvServicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Bus Cama"
                        android:textColor="@color/Textos_normal_second"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="S/ 45.00"
                    android:textColor="@color/Textos_destacado"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>

            <!-- Datos Pasajero en la tarjeta -->
            <TextView
                android:id="@+id/tvPasajeroNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Juan Perez Lopez"
                android:textColor="@color/Textos_normal"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPasajeroDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="DNI: 70554433"
                android:textColor="@color/Textos_normal_second"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tvEstadoViaje"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="[ESTADO]"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_white_pill"
                android:textColor="@color/color_programado"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>