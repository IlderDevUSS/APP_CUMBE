<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_pantalla">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/fondo_pantalla"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarCompra"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/fondo_pantalla"
            app:title="Comprar Pasaje"
            app:titleTextColor="@color/Textos_normal_tercero"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/Textos_normal_tercero"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECCIÓN 1: RUTA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona tu Ruta"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/Textos_normal_tercero"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Textos_destacado"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Origen"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                    <!-- Spinner con fondo claro -->
                    <Spinner
                        android:id="@+id/spinnerOrigen"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_cumbe"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Destino"
                        android:textSize="12sp"/>

                    <Spinner
                        android:id="@+id/spinnerDestino"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_cumbe"
                        android:layout_marginTop="4dp"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN 2: FECHA (TABS) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Viaje"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/Textos_normal_tercero"
                android:layout_marginBottom="12dp"/>

            <!-- TabLayout con colores explícitos -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabFechas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/color_principal_cumbe"
                app:tabSelectedTextColor="@color/color_principal_cumbe"
                app:tabTextColor="@color/gris1"
                android:layout_marginBottom="16dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOY" />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAÑANA" />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_calendar2" />
            </com.google.android.material.tabs.TabLayout>

            <!-- SECCIÓN 3: LISTA DE HORARIOS -->
            <TextView
                android:id="@+id/tvResultadosTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios Disponibles"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/Textos_normal"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_horario_card"/>

            <!-- Mensaje de vacío -->
            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona origen y destino para ver horarios."
                android:gravity="center"
                android:padding="30dp"
                android:textColor="@color/gris1"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>