<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarAsientos"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Elige tu Asiento"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/black"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Info del Viaje -->
        <TextView
            android:id="@+id/tvRutaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lima - Trujillo | 08:30 PM"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Selector de Piso -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabPisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_surface_bg"
            app:tabIndicatorColor="@color/color_principal_cumbe"
            app:tabSelectedTextColor="@color/color_principal_cumbe"
            app:tabTextColor="@color/gris1"
            android:layout_marginBottom="16dp">

            <!-- CORRECCIÓN: Usar atributos android:text en lugar de TextViews anidados -->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piso 1" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piso 2" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Leyenda -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/bg_white_pill" android:backgroundTint="@color/white" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Libre" android:layout_marginStart="4dp" android:layout_marginEnd="12dp"/>

            <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/bg_white_pill" android:backgroundTint="#E0E0E0" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ocupado" android:layout_marginStart="4dp" android:layout_marginEnd="12dp"/>

            <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/bg_white_pill" android:backgroundTint="@color/color_principal_cumbe" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tu Asiento" android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- EL BUS (RecyclerView) -->
        <!-- IMPORTANTE: layout_height="0dp" y layout_weight="1" para que ocupe el espacio restante -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pill"
            android:backgroundTint="#EEE"
            android:padding="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAsientos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"/>

            <!-- Volante (Decorativo) -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_directions_bus"
                android:layout_gravity="top|center_horizontal"
                app:tint="#AAA"
                android:layout_marginTop="-15dp"/>
        </FrameLayout>

        <!-- Botón Confirmar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmarAsiento"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Continuar (S/ 0.00)"
            android:enabled="false"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/color_principal_cumbe"
            app:cornerRadius="12dp"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>