<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo_destacados"
        android:padding="16dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_accent"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/ivInfoIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_email"
                app:tint="@color/color_iconos" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Email"
                android:textSize="12sp"
                android:textColor="@color/color_text_secondary"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvInfoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="usuario@ejemplo.com"
                android:textSize="16sp"
                android:textColor="@color/Textos_normal_second"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>