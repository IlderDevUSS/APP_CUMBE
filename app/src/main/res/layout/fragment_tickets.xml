<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface_bg">

    <TextView
        android:id="@+id/tvTitleTickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Viajes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/color_text_primary"
        android:padding="24dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTicketsHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTickets"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_ticket_history"/>

    <TextView
        android:id="@+id/tvEmptyTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃºn no has realizado viajes."
        android:textColor="@color/gris1"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/color_principal_cumbe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>