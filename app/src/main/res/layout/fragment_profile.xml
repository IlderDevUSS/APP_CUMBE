<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_pantalla">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/fondo_pantalla"
        app:elevation="0dp">

        <TextView
            android:id="@+id/tvTitleProfile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/Textos_normal_tercero"
            android:textAlignment="center"
            android:padding="24dp"
            android:background="@color/fondo_pantalla"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivProfileAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_account_circle"
                    android:scaleType="centerCrop"
                    app:tint="@color/color_iconos"
                    android:padding="0dp"/>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/tvProfileNameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Andrea Martínez"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/Textos_normal_tercero"
                android:textAlignment="center"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tvProfileTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="[Tipo usuario]"
                android:textSize="15sp"
                android:textColor="@color/Textos_normal_second"
                android:textAlignment="center"
                android:layout_marginBottom="4dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Información Personal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Textos_normal_second"
                android:layout_marginBottom="16dp"/>

            <include layout="@layout/item_profile_info" android:id="@+id/cardEmail" />
            <include layout="@layout/item_profile_info" android:id="@+id/cardDni" />
            <include layout="@layout/item_profile_info" android:id="@+id/cardPhone" />
            <include layout="@layout/item_profile_info" android:id="@+id/cardBirthDate" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Editar Mis Datos"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/color_iconos"
                app:cornerRadius="12dp"
                android:layout_marginTop="32dp"
                style="@style/Widget.MaterialComponents.Button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Cerrar Sesión"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                app:backgroundTint="#FFEBEE"
                app:cornerRadius="12dp"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>