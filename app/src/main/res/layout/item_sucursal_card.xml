<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Mapa simulado o imagen de la sucursal -->
        <ImageView
            android:id="@+id/ivSucursalImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/bus_3"
            android:scaleType="centerCrop"
            android:alpha="0.8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo_destacados"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCiudadSucursal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Cajamarca"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/Textos_destacado"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location_su"
                    app:tint="@color/color_text_secondary"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="2dp"/>
                <!-- Usa ic_location_on si lo tienes, sino ic_local_activity sirve -->
                <TextView
                    android:id="@+id/tvDireccionSucursal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Av. San MartÃ­n de Porres 140"
                    android:textColor="@color/Textos_normal"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>